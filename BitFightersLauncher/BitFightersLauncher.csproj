    <PackageReference Include="System.Text.Json" Version="9.0.8" />
    <PackageReference Include="WindowsAPICodePack" Version="8.0.9" />
  </ItemGroup>

  <ItemGroup>
    <Resource Include="Resources\Logo.png">
