<Window x:Class="BitFightersLauncher.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="BitFighters Launcher" Height="700" Width="1200"
        WindowStyle="None" AllowsTransparency="True" Background="Transparent">

    <Border CornerRadius="18" BorderBrush="#33ffe59f" BorderThickness="1.5">
        <Border.Background>
            <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                <GradientStop Color="#FF2c2f34" Offset="0"/>
                <GradientStop Color="#FF140e0e" Offset="1"/>
            </LinearGradientBrush>
        </Border.Background>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Grid Height="80" VerticalAlignment="Top" Grid.Row="0" MouseLeftButtonDown="DragWindow">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <DockPanel HorizontalAlignment="Center" VerticalAlignment="Center" Grid.ColumnSpan="3" Margin="0,6,0,12">
                    <Image Source="/Resources/Logo.png" Width="85">
                        <Image.Effect>
                            <DropShadowEffect Color="#FFFFA726" BlurRadius="40" ShadowDepth="0" Opacity="1.2"/>
                        </Image.Effect>
                    </Image>
                    <TextBlock Text="BITFIGHTERS" FontSize="28" FontWeight="Bold" Foreground="#FFFFA726" Width="181" TextAlignment="Center" VerticalAlignment="Center">
                        <TextBlock.Effect>
                            <DropShadowEffect ShadowDepth="0" Opacity="1.2" Color="#FFFFA726" BlurRadius="20"/>
                        </TextBlock.Effect>
                    </TextBlock>
                </DockPanel>

                <Button Content="&#xE711;"
                        FontFamily="Segoe MDL2 Assets"
                        FontSize="28"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Top"
                        Margin="0,11,11,0"
                        Grid.Column="2"
                        Click="ExitButton_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="Transparent"/>
                            <Setter Property="BorderBrush" Value="Transparent"/>
                            <Setter Property="Foreground" Value="#FFFFA726"/>
                            <Setter Property="Cursor" Value="Hand"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Foreground" Value="Red"/>
                                    <Setter Property="Effect">
                                        <Setter.Value>
                                            <DropShadowEffect Color="Red" BlurRadius="20" ShadowDepth="0"/>
                                        </Setter.Value>
                                    </Setter>
                                    <Setter Property="Background" Value="Transparent"/>
                                    <Setter Property="BorderBrush" Value="Transparent"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </Grid>

            <Grid Grid.Row="1" Margin="0,0,0,0" Width="1196">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="120"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="420"/>
                </Grid.ColumnDefinitions>

                <Rectangle Height="2" VerticalAlignment="Top" Fill="#FFFFA726" Opacity="0.6" Grid.ColumnSpan="3"/>

                <Border Grid.Column="0" CornerRadius="0,0,0,17" Margin="0,2,0,0">
                    <Border.Background>
                        <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                            <GradientStop Color="#FF2c2f34" Offset="0"/>
                            <GradientStop Color="#FF181A1B" Offset="1"/>
                        </LinearGradientBrush>
                    </Border.Background>
                    <StackPanel VerticalAlignment="Stretch" Background="Transparent" Margin="0,2,0,0">
                        <StackPanel.Resources>
                            <Style x:Key="NavButtonStyle" TargetType="Button">
                                <Setter Property="Background" Value="Transparent"/>
                                <Setter Property="BorderBrush" Value="Transparent"/>
                                <Setter Property="Foreground" Value="#FFFFA726"/>
                                <Setter Property="FontSize" Value="32"/>
                                <Setter Property="Margin" Value="0,32,0,30"/>
                                <Setter Property="Cursor" Value="Hand"/>
                            </Style>
                        </StackPanel.Resources>
                        <Button Style="{StaticResource NavButtonStyle}" Content="&#xE80F;" FontFamily="Segoe MDL2 Assets" ToolTip="Home" Width="37"/>
                        <Button Style="{StaticResource NavButtonStyle}" Content="&#xE713;" FontFamily="Segoe MDL2 Assets" ToolTip="Settings" Width="37"/>
                        <Button Style="{StaticResource NavButtonStyle}" Content="&#xE734;" FontFamily="Segoe MDL2 Assets" ToolTip="Star" Width="37"/>
                        <Button Style="{StaticResource NavButtonStyle}" Content="&#xE77B;" FontFamily="Segoe MDL2 Assets" ToolTip="Profile" Width="37"/>
                        <Button Style="{StaticResource NavButtonStyle}" Content="&#xE896;" FontFamily="Segoe MDL2 Assets" ToolTip="Download" Width="37"/>
                    </StackPanel>
                </Border>
                <Rectangle Width="6" Fill="#FFFFA726" RadiusX="3" RadiusY="3" Margin="114,16,0,525">
                    <Rectangle.Effect>
                        <DropShadowEffect Color="#FFFFA726" BlurRadius="12" ShadowDepth="0" Opacity="1.2"/>
                    </Rectangle.Effect>
                </Rectangle>

                <StackPanel Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="328,0,0,0">
                    <Button Width="320"
                            Height="320"
                            Cursor="Hand"
                            Click="HandleActionButton_Click">
                        <Button.Style>
                            <Style TargetType="{x:Type Button}">
                                <Setter Property="Background" Value="Transparent" />
                                <Setter Property="BorderBrush" Value="Transparent" />
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="{x:Type Button}">
                                            <Grid>
                                                <Border x:Name="OuterBorder"
                                                        CornerRadius="45"
                                                        BorderThickness="4"
                                                        BorderBrush="#FFFFA726"
                                                        Margin="-6">
                                                    <Border.Effect>
                                                        <DropShadowEffect Color="#FFFFA726"
                                                                          BlurRadius="12"
                                                                          ShadowDepth="0"
                                                                          Opacity="1"
                                                                          RenderingBias="Quality" />
                                                    </Border.Effect>
                                                </Border>

                                                <Border x:Name="InnerBorder"
                                                        Width="300"
                                                        Height="300"
                                                        CornerRadius="37"
                                                        BorderThickness="4"
                                                        BorderBrush="#FFFFA726"
                                                        Padding="32">
                                                    <Border.Effect>
                                                        <DropShadowEffect Color="#FFFFA726"
                                                                          BlurRadius="12"
                                                                          ShadowDepth="0"
                                                                          Opacity="1.2" />
                                                    </Border.Effect>
                                                    <ContentPresenter HorizontalAlignment="Center"
                                                                      VerticalAlignment="Center" />
                                                </Border>
                                            </Grid>

                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter TargetName="InnerBorder"
                                                            Property="Background"
                                                            Value="#40FFA726" />
                                                </Trigger>
                                                <Trigger Property="IsPressed" Value="True">
                                                    <Setter TargetName="InnerBorder"
                                                            Property="Background"
                                                            Value="#80FFA726" />
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Button.Style>

                        <Viewbox>
                            <Grid>
                                <TextBlock x:Name="ButtonText"
                                           Text="LETÖLTÉS"
                                           Foreground="White"
                                           FontSize="48"
                                           FontWeight="Bold"
                                           VerticalAlignment="Center"
                                           HorizontalAlignment="Center">
                                    <TextBlock.Effect>
                                        <DropShadowEffect Color="#FFFFA726"
                                                          BlurRadius="12"
                                                          ShadowDepth="0"
                                                          Opacity="1.2" />
                                    </TextBlock.Effect>
                                </TextBlock>
                                <ProgressBar x:Name="DownloadProgressBar"
                                             Height="40"
                                             VerticalAlignment="Center"
                                             HorizontalAlignment="Stretch"
                                             Maximum="100"
                                             Value="0"
                                             Visibility="Collapsed"
                                             Background="#33ffe59f"
                                             BorderBrush="#FFFFA726"
                                             BorderThickness="1" />
                            </Grid>
                        </Viewbox>
                    </Button>
                </StackPanel>

                <StackPanel Grid.Column="2" Margin="87,94,32,147">
                    <TextBlock Text="RECENT NEWS &amp; UPDATES" Foreground="White" FontSize="22" FontWeight="Bold" Margin="0,0,0,24"/>
                    <StackPanel Height="226">
                        <StackPanel.Resources>
                            <Style x:Key="NeonGlowRectangle" TargetType="Rectangle">
                                <Setter Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect Color="#FFFFA726" BlurRadius="25" ShadowDepth="0" Opacity="1.2"/>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </StackPanel.Resources>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
                            <Rectangle Width="4" Height="40" Fill="#FFFFA726" RadiusX="2" RadiusY="2" Margin="0,0,12,0" Style="{StaticResource NeonGlowRectangle}"/>
                            <StackPanel>
                                <TextBlock Text="Soccl Settings" Foreground="White" FontWeight="Bold" FontSize="15"/>
                                <TextBlock Text="Your central settings strip placed the planning office and options." TextWrapping="Wrap" Foreground="#FFCCCCCC" FontSize="12"/>
                            </StackPanel>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
                            <Rectangle Width="4" Height="40" Fill="#FFFFA726" RadiusX="2" RadiusY="2" Margin="0,0,12,0" Style="{StaticResource NeonGlowRectangle}"/>
                            <StackPanel>
                                <TextBlock Text="Shire Prellings" Foreground="White" FontWeight="Bold" FontSize="15"/>
                                <TextBlock Text="Wear scorrilion procmord four contact trend member blocks to enter sites at two/three to tomorrow." TextWrapping="Wrap" Foreground="#FFCCCCCC" FontSize="12"/>
                            </StackPanel>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <Rectangle Width="4" Height="40" Fill="#FFFFA726" RadiusX="2" RadiusY="2" Margin="0,0,12,0"/>
                            <StackPanel>
                                <TextBlock Text="Proel New" Foreground="White" FontWeight="Bold" FontSize="15"/>
                                <TextBlock Text="Code camartishup tiny artcoed the data store vion there yet in." TextWrapping="Wrap" Foreground="#FFCCCCCC" FontSize="12"/>
                            </StackPanel>
                        </StackPanel>
                    </StackPanel>
                </StackPanel>
            </Grid>
        </Grid>
    </Border>
</Window>