<Window x:Class="BitFightersLauncher.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="BitFighters Launcher" Height="700" Width="1200"
        WindowStyle="None" AllowsTransparency="True" Background="Transparent">
    <Border CornerRadius="18" BorderBrush="#33FFA726" BorderThickness="1.5" Background="#FF181A1B">
        <Grid>
            <!-- Top orange line -->
            <Rectangle Height="2" VerticalAlignment="Top" Fill="#FFFFA726" Opacity="0.3"/>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="120"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="420"/>
                </Grid.ColumnDefinitions>
                <!-- Sidebar -->
                <StackPanel Grid.Column="0" Background="#FF181A1B" VerticalAlignment="Stretch">
                    <StackPanel.Resources>
                        <Style x:Key="NavButtonStyle" TargetType="Button">
                            <Setter Property="Background" Value="Transparent"/>
                            <Setter Property="BorderBrush" Value="Transparent"/>
                            <Setter Property="Foreground" Value="#FFFFA726"/>
                            <Setter Property="FontSize" Value="28"/>
                            <Setter Property="Margin" Value="0,18,0,0"/>
                            <Setter Property="Cursor" Value="Hand"/>
                        </Style>
                    </StackPanel.Resources>
                    <Button Style="{StaticResource NavButtonStyle}" Content="&#xE713;" FontFamily="Segoe MDL2 Assets" ToolTip="Settings"/>
                    <Button Style="{StaticResource NavButtonStyle}" Content="&#xE734;" FontFamily="Segoe MDL2 Assets" ToolTip="Favorites"/>
                    <Button Style="{StaticResource NavButtonStyle}" Content="&#xEB3C;" FontFamily="Segoe MDL2 Assets" ToolTip="Trophy"/>
                    <Button Style="{StaticResource NavButtonStyle}" Content="&#xE77B;" FontFamily="Segoe MDL2 Assets" ToolTip="Profile"/>
                    <Button Style="{StaticResource NavButtonStyle}" Content="&#xE77B;" FontFamily="Segoe MDL2 Assets" ToolTip="Users"/>
                    <!-- Orange glowing vertical bar -->
                    <Rectangle Height="60" Width="6" Fill="#FFFFA726" RadiusX="3" RadiusY="3" Margin="32,24,0,0">
                        <Rectangle.Effect>
                            <DropShadowEffect Color="#FFFFA726" BlurRadius="16" ShadowDepth="0" Opacity="0.8"/>
                        </Rectangle.Effect>
                    </Rectangle>
                </StackPanel>
                <!-- Main Center -->
                <StackPanel Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Center">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,32,0,0">
                        <!-- Logo (replace with your image if available) -->
                        <Image Source="/Resources/quadra.png" Height="40" Margin="0,0,12,0">
                            <Image.Effect>
                                <DropShadowEffect Color="#FFFFA726" BlurRadius="30" ShadowDepth="0" Opacity="1"/>
                            </Image.Effect>
                        </Image>
                        <TextBlock Text="BITFIGHTERS" Foreground="#FFFFA726" FontSize="28" FontWeight="Bold" VerticalAlignment="Center">
                            <TextBlock.Effect>
                                <DropShadowEffect Color="#FFFFA726" BlurRadius="10" ShadowDepth="0" Opacity="1"/>
                            </TextBlock.Effect>
                        </TextBlock>
                    </StackPanel>
                    <Rectangle Height="2" Width="320" Fill="#FFFFA726" Opacity="0.2" Margin="0,16,0,32"/>
                    <!-- Neon Play Button with reddish-orange glowing effect for both borders -->
                    <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
                        <!-- Outer neon border -->
                        <Border Width="325" Height="325" CornerRadius="40" BorderThickness="5"
                                BorderBrush="#FFFFA726" Background="Transparent">
                            <Border.Effect>
                                <DropShadowEffect Color="#FFFFA726" BlurRadius="60" ShadowDepth="0" Opacity="0.9"/>
                            </Border.Effect>
                        </Border>
                        <!-- Inner neon border with more padding (looser) -->
                        <Border Width="300" Height="300" CornerRadius="32" BorderThickness="4"
                                BorderBrush="#FFFFA726" Background="#00FFFFFF" Padding="32">
                            <Border.Effect>
                                <DropShadowEffect Color="#FFFFA726" BlurRadius="30" ShadowDepth="0" Opacity="0.7"/>
                            </Border.Effect>
                            <Viewbox>
                                <TextBlock Text="PLAY" Foreground="White" FontSize="48" FontWeight="Bold"
                                           VerticalAlignment="Center" HorizontalAlignment="Center" Padding="0,48,0,48">
                                    <TextBlock.Effect>
                                        <!-- Extra glow for text -->
                                        <DropShadowEffect Color="#FFFFA040" BlurRadius="18" ShadowDepth="0" Opacity="0.8"/>
                                    </TextBlock.Effect>
                                </TextBlock>
                            </Viewbox>
                        </Border>
                        <!-- Extra inner glow for inner border -->
                        <Border Width="285" Height="285" CornerRadius="28" BorderThickness="2"
                                BorderBrush="#33FFD580" Background="Transparent">
                            <Border.Effect>
                                <DropShadowEffect Color="#33FFD580" BlurRadius="24" ShadowDepth="0" Opacity="0.6"/>
                            </Border.Effect>
                        </Border>
                    </Grid>
                </StackPanel>
                <!-- News & Updates -->
                <StackPanel Grid.Column="2" Margin="32,48,32,32">
                    <TextBlock Text="RECENT NEWS &amp; UPDATES" Foreground="White" FontSize="22" FontWeight="Bold" Margin="0,0,0,24"/>
                    <StackPanel>
                        <StackPanel.Resources>
                            <Style x:Key="NeonGlowRectangle" TargetType="Rectangle">
                                <Setter Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect Color="#FFFFA726" BlurRadius="16" ShadowDepth="0" Opacity="1"/>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </StackPanel.Resources>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
                            <Rectangle Width="4" Height="40" Fill="#FFFFA726" RadiusX="2" RadiusY="2" Margin="0,0,12,0" Style="{StaticResource NeonGlowRectangle}"/>
                            <StackPanel>
                                <TextBlock Text="Soccl Settings" Foreground="White" FontWeight="Bold" FontSize="15"/>
                                <TextBlock Text="Your central settings strip placed the planning office and options." Foreground="#FFCCCCCC" FontSize="12"/>
                            </StackPanel>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
                            <Rectangle Width="4" Height="40" Fill="#FFFFA726" RadiusX="2" RadiusY="2" Margin="0,0,12,0" Style="{StaticResource NeonGlowRectangle}"/>
                            <StackPanel>
                                <TextBlock Text="Shire Prellings" Foreground="White" FontWeight="Bold" FontSize="15"/>
                                <TextBlock Text="Wear scorrilion procmord four contact trend member blocks to enter sites at two/three to tomorrow." Foreground="#FFCCCCCC" FontSize="12"/>
                            </StackPanel>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <Rectangle Width="4" Height="40" Fill="#FFFFA726" RadiusX="2" RadiusY="2" Margin="0,0,12,0"/>
                            <StackPanel>
                                <TextBlock Text="Proel New" Foreground="White" FontWeight="Bold" FontSize="15"/>
                                <TextBlock Text="Code camartishup tiny artcoed the data store vion there yet in." Foreground="#FFCCCCCC" FontSize="12"/>
                            </StackPanel>
                        </StackPanel>
                    </StackPanel>
                </StackPanel>
                <!-- Top right hamburger menu -->
                <Button Grid.Column="2" Content="&#xE700;" FontFamily="Segoe MDL2 Assets" FontSize="28" Foreground="#FFFFA726"
                        Background="Transparent" BorderBrush="Transparent" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,8,8,0"/>
            </Grid>
        </Grid>
    </Border>
</Window>
