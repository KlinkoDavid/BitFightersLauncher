<Window x:Class="BitFightersLauncher.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="BitFighters Launcher" Height="700" Width="1200"
        WindowStyle="None" AllowsTransparency="True" Background="Transparent"
        Icon="/Resources/Logo.png"
        x:Name="BitFightersWindow">

    <Window.Resources>
        <Storyboard x:Key="ShowNotification">
            <ThicknessAnimation Storyboard.TargetProperty="Margin" To="20,110,20,0" Duration="0:0:0.3"/>
            <DoubleAnimation Storyboard.TargetProperty="Opacity" To="1" Duration="0:0:0.3"/>
            <ObjectAnimationUsingKeyFrames Storyboard.TargetProperty="Visibility" Duration="0">
                <DiscreteObjectKeyFrame KeyTime="0" Value="{x:Static Visibility.Visible}"/>
            </ObjectAnimationUsingKeyFrames>
        </Storyboard>
        <Storyboard x:Key="HideNotification">
            <ThicknessAnimation Storyboard.TargetProperty="Margin" To="20,90,20,0" Duration="0:0:0.3"/>
            <DoubleAnimation Storyboard.TargetProperty="Opacity" To="0" Duration="0:0:0.3"/>
            <ObjectAnimationUsingKeyFrames Storyboard.TargetProperty="Visibility" BeginTime="0:0:0.3" Duration="0">
                <DiscreteObjectKeyFrame KeyTime="0" Value="{x:Static Visibility.Collapsed}"/>
            </ObjectAnimationUsingKeyFrames>
        </Storyboard>
    </Window.Resources>

    <Border CornerRadius="18" BorderBrush="#33CCCCCC" BorderThickness="1.5" ClipToBounds="True">
        <Border.Background>
            <SolidColorBrush Color="#FF1A1C20"/>
        </Border.Background>

        <Grid>
            <Image x:Name="AnimatedBackgroundImage" Stretch="UniformToFill"/>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Grid Height="80" VerticalAlignment="Center" MouseLeftButtonDown="DragWindow" HorizontalAlignment="Left" Width="1197">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="383*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="16*"/>
                    </Grid.ColumnDefinitions>
                    <DockPanel VerticalAlignment="Top" Margin="475,6,423,0" Height="62">
                        <Image Source="/Resources/Logo.png" Width="70">
                            <Image.Effect>
                                <DropShadowEffect Color="#FFFFA726" BlurRadius="40" ShadowDepth="0" Opacity="1.2"/>
                            </Image.Effect>
                        </Image>
                        <TextBlock Text="BITFIGHTERS" FontSize="28" FontWeight="Bold" Foreground="#FFFFA726" Width="181" TextAlignment="Center" VerticalAlignment="Center">
                            <TextBlock.Effect>
                                <DropShadowEffect ShadowDepth="0" Opacity="1.2" Color="#FFFFA726" BlurRadius="20"/>
                            </TextBlock.Effect>
                        </TextBlock>
                    </DockPanel>
                    <Button Content="&#xE711;" FontFamily="Segoe MDL2 Assets" FontSize="28" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,10,0,0" Grid.Column="2" Click="ExitButton_Click" Height="28" Width="28">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="Transparent"/>
                                <Setter Property="BorderBrush" Value="Transparent"/>
                                <Setter Property="Foreground" Value="#FFFFA726"/>
                                <Setter Property="Cursor" Value="Hand"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <ContentPresenter x:Name="contentPresenter" HorizontalAlignment="Center" VerticalAlignment="Center">
                                                <ContentPresenter.Effect>
                                                    <DropShadowEffect x:Name="glowEffect" Color="#FFFFA726" BlurRadius="0" ShadowDepth="0" Opacity="0"/>
                                                </ContentPresenter.Effect>
                                            </ContentPresenter>
                                            <ControlTemplate.Triggers>
                                                <EventTrigger RoutedEvent="MouseEnter">
                                                    <BeginStoryboard>
                                                        <Storyboard>
                                                            <ColorAnimation Storyboard.TargetProperty="(Button.Foreground).(SolidColorBrush.Color)" To="Red" Duration="0:0:0.2"/>
                                                            <DoubleAnimation Storyboard.TargetName="glowEffect" Storyboard.TargetProperty="BlurRadius" To="20" Duration="0:0:0.2"/>
                                                            <DoubleAnimation Storyboard.TargetName="glowEffect" Storyboard.TargetProperty="Opacity" To="1.5" Duration="0:0:0.2"/>
                                                            <ColorAnimation Storyboard.TargetName="glowEffect" Storyboard.TargetProperty="Color" To="Red" Duration="0:0:0.2"/>
                                                        </Storyboard>
                                                    </BeginStoryboard>
                                                </EventTrigger>
                                                <EventTrigger RoutedEvent="MouseLeave">
                                                    <BeginStoryboard>
                                                        <Storyboard>
                                                            <ColorAnimation Storyboard.TargetProperty="(Button.Foreground).(SolidColorBrush.Color)" To="#FFFFA726" Duration="0:0:0.3"/>
                                                            <DoubleAnimation Storyboard.TargetName="glowEffect" Storyboard.TargetProperty="BlurRadius" To="0" Duration="0:0:0.3"/>
                                                            <DoubleAnimation Storyboard.TargetName="glowEffect" Storyboard.TargetProperty="Opacity" To="0" Duration="0:0:0.3"/>
                                                            <ColorAnimation Storyboard.TargetName="glowEffect" Storyboard.TargetProperty="Color" To="#FFFFA726" Duration="0:0:0.3"/>
                                                        </Storyboard>
                                                    </BeginStoryboard>
                                                </EventTrigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Button.Style>
                    </Button>
                </Grid>

                <Grid Grid.Row="1" Margin="0,0,0,0" Width="1196">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="120"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="420"/>
                    </Grid.ColumnDefinitions>

                    <Rectangle Height="2" VerticalAlignment="Top" Fill="#FFFFA726" Opacity="0.6" Grid.ColumnSpan="3"/>

                    <Border Grid.Column="0" CornerRadius="0,0,0,17" Margin="0,2,0,0">
                        <Border.Background>
                            <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                                <GradientStop Color="#FF2c2f34" Offset="0"/>
                                <GradientStop Color="#FF181A1B" Offset="1"/>
                            </LinearGradientBrush>
                        </Border.Background>
                        <StackPanel VerticalAlignment="Stretch" Background="Transparent" Margin="0,2,0,0">
                            <StackPanel.Resources>
                                <Style x:Key="NavButtonStyle" TargetType="Button">
                                    <Setter Property="Background" Value="Transparent"/>
                                    <Setter Property="BorderBrush" Value="Transparent"/>
                                    <Setter Property="Foreground" Value="#FFFFA726"/>
                                    <Setter Property="FontSize" Value="32"/>
                                    <Setter Property="Margin" Value="0,32,0,30"/>
                                    <Setter Property="Cursor" Value="Hand"/>
                                </Style>
                            </StackPanel.Resources>
                            <Button Style="{StaticResource NavButtonStyle}" Content="&#xE80F;" FontFamily="Segoe MDL2 Assets" ToolTip="Home" Width="37"/>
                            <Button Style="{StaticResource NavButtonStyle}" Content="&#xE713;" FontFamily="Segoe MDL2 Assets" ToolTip="Settings" Width="37"/>
                            <Button Style="{StaticResource NavButtonStyle}" Content="&#xE734;" FontFamily="Segoe MDL2 Assets" ToolTip="Star" Width="37"/>
                            <Button Style="{StaticResource NavButtonStyle}" Content="&#xE77B;" FontFamily="Segoe MDL2 Assets" ToolTip="Profile" Width="37"/>
                            <Button Style="{StaticResource NavButtonStyle}" Content="&#xE896;" FontFamily="Segoe MDL2 Assets" ToolTip="Download" Width="37"/>
                        </StackPanel>
                    </Border>
                    <Rectangle Width="6" Fill="#FFFFA726" RadiusX="3" RadiusY="3" Margin="114,16,0,525">
                        <Rectangle.Effect>
                            <DropShadowEffect Color="#FFFFA726" BlurRadius="12" ShadowDepth="0" Opacity="1.2"/>
                        </Rectangle.Effect>
                    </Rectangle>

                    <Grid Grid.Column="1">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <TextBlock x:Name="StatusTextBlock" Text="" Foreground="#FFCCCCCC" FontSize="14" VerticalAlignment="Top" HorizontalAlignment="Center" Margin="0,20,0,0" TextWrapping="Wrap" />
                        <Button x:Name="ActionButton" Cursor="Hand" Click="HandleActionButton_Click" HorizontalAlignment="Left" VerticalAlignment="Center" RenderTransformOrigin="0.5,0.5" Width="310" Height="310" Margin="324,0,0,0">
                            <Button.RenderTransform>
                                <TransformGroup>
                                    <ScaleTransform/>
                                    <SkewTransform AngleX="0.095"/>
                                    <RotateTransform/>
                                    <TranslateTransform X="0.248"/>
                                </TransformGroup>
                            </Button.RenderTransform>
                            <Button.Style>
                                <Style TargetType="{x:Type Button}">
                                    <Setter Property="Background" Value="Transparent" />
                                    <Setter Property="BorderBrush" Value="Transparent" />
                                    <Setter Property="Foreground" Value="White" />
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="{x:Type Button}">
                                                <Grid>
                                                    <Border x:Name="OuterBorder" CornerRadius="45" BorderThickness="4" BorderBrush="#FFFFA726" Margin="-6" Background="#00000000">
                                                        <Border.Effect>
                                                            <DropShadowEffect x:Name="OuterGlow" Color="#FFFFA726" BlurRadius="12" ShadowDepth="0" Opacity="1" RenderingBias="Quality" />
                                                        </Border.Effect>
                                                    </Border>
                                                    <Border x:Name="InnerBorder" Width="300" Height="300" CornerRadius="37" BorderThickness="4" BorderBrush="#FFFFA726" Padding="32" Background="#00000000">
                                                        <Border.Effect>
                                                            <DropShadowEffect x:Name="InnerGlow" Color="#FFFFA726" BlurRadius="12" ShadowDepth="0" Opacity="1.2" />
                                                        </Border.Effect>
                                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                                                    </Border>
                                                </Grid>
                                                <ControlTemplate.Triggers>
                                                    <EventTrigger RoutedEvent="UIElement.MouseEnter">
                                                        <BeginStoryboard>
                                                            <Storyboard>
                                                                <ColorAnimation Storyboard.TargetName="OuterBorder" Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)" To="#FFFFA726" Duration="0:0:0.2"/>
                                                                <ColorAnimation Storyboard.TargetName="InnerBorder" Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)" To="#FFFFA726" Duration="0:0:0.2"/>
                                                                <DoubleAnimation Storyboard.TargetName="InnerGlow" Storyboard.TargetProperty="BlurRadius" To="40" Duration="0:0:0.2"/>
                                                                <DoubleAnimation Storyboard.TargetName="OuterGlow" Storyboard.TargetProperty="BlurRadius" To="30" Duration="0:0:0.2"/>
                                                            </Storyboard>
                                                        </BeginStoryboard>
                                                    </EventTrigger>
                                                    <EventTrigger RoutedEvent="UIElement.MouseLeave">
                                                        <BeginStoryboard>
                                                            <Storyboard>
                                                                <ColorAnimation Storyboard.TargetName="OuterBorder" Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)" To="#00000000" Duration="0:0:0.3"/>
                                                                <ColorAnimation Storyboard.TargetName="InnerBorder" Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)" To="#00000000" Duration="0:0:0.3"/>
                                                                <DoubleAnimation Storyboard.TargetName="InnerGlow" Storyboard.TargetProperty="BlurRadius" To="12" Duration="0:0:0.3"/>
                                                                <DoubleAnimation Storyboard.TargetName="OuterGlow" Storyboard.TargetProperty="BlurRadius" To="12" Duration="0:0:0.3"/>
                                                            </Storyboard>
                                                        </BeginStoryboard>
                                                    </EventTrigger>
                                                    <Trigger Property="IsPressed" Value="True">
                                                        <Setter TargetName="InnerBorder" Property="Background" Value="#CCFFA726"/>
                                                    </Trigger>
                                                    <Trigger Property="IsEnabled" Value="False">
                                                        <Setter TargetName="InnerBorder" Property="Opacity" Value="0.5"/>
                                                        <Setter TargetName="OuterBorder" Property="Opacity" Value="0.5"/>
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </Button.Style>
                            <Viewbox>
                                <TextBlock x:Name="ButtonText" Text="LETÖLTÉS" FontSize="48" FontWeight="Bold" VerticalAlignment="Center" HorizontalAlignment="Center">
                                    <TextBlock.Effect>
                                        <DropShadowEffect Color="#FFFFA726" BlurRadius="12" ShadowDepth="0" Opacity="1.2" />
                                    </TextBlock.Effect>
                                </TextBlock>
                            </Viewbox>
                        </Button>
                        <Grid x:Name="DownloadStatusGrid" Grid.Row="0" VerticalAlignment="Bottom" Margin="20,0,20,40" Visibility="Collapsed">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Border Grid.RowSpan="2" Background="#991c1e22" CornerRadius="10" BorderBrush="#A7FFA726" BorderThickness="2">
                                <Border.Effect>
                                    <DropShadowEffect Color="Black" BlurRadius="10" ShadowDepth="0" Opacity="0.5"/>
                                </Border.Effect>
                            </Border>
                            <Grid Grid.Row="0" Margin="15,10">
                                <TextBlock x:Name="DownloadStatusText" Text="Letöltés..." Foreground="White" FontSize="16" FontWeight="Bold" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                                <TextBlock x:Name="ProgressDetailsText" Text="0 MB / 0 MB" Foreground="#CCCCCC" FontSize="14" HorizontalAlignment="Right" VerticalAlignment="Center"/>
                            </Grid>
                            <Grid Grid.Row="1" Margin="15,0,15,15">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <ProgressBar x:Name="DownloadProgressBar" VerticalAlignment="Center" Height="10">
                                    <ProgressBar.Style>
                                        <Style TargetType="ProgressBar">
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="ProgressBar">
                                                        <Grid>
                                                            <Border x:Name="PART_Track" CornerRadius="5" Background="#55ffe59f"/>
                                                            <Border x:Name="PART_Indicator" CornerRadius="5" Background="#FFFFA726" HorizontalAlignment="Left"/>
                                                        </Grid>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                        </Style>
                                    </ProgressBar.Style>
                                </ProgressBar>
                                <TextBlock x:Name="ProgressPercentageText" Text="0%" Grid.Column="1" Foreground="White" FontWeight="Bold" Margin="10,0,0,0" VerticalAlignment="Center"/>
                            </Grid>
                        </Grid>
                    </Grid>

                    <StackPanel Grid.Column="2" HorizontalAlignment="Center" Margin="0,40,0,25">
                        <TextBlock Text="RECENT NEWS &amp; UPDATES" Foreground="White" FontSize="22" FontWeight="Bold" HorizontalAlignment="Center"/>
                        <Rectangle Height="1" Fill="#A7FFA726" Margin="0,10,0,20" HorizontalAlignment="Center" Width="295"/>
                        <Grid Height="370">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <ScrollViewer x:Name="NewsScrollViewer" Grid.Row="1" VerticalScrollBarVisibility="Hidden" PreviewMouseWheel="NewsScrollViewer_PreviewMouseWheel" ScrollChanged="NewsScrollViewer_ScrollChanged">
                                <ItemsControl x:Name="NewsItemsControl" HorizontalAlignment="Center">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Horizontal" Margin="0,0,0,26">
                                                <Rectangle Width="4" Height="55" Fill="#FFFFA726" RadiusX="2" RadiusY="2" Margin="0,0,12,0">
                                                    <Rectangle.Effect>
                                                        <DropShadowEffect Color="#FFFFA726" BlurRadius="25" ShadowDepth="0" Opacity="1.2"/>
                                                    </Rectangle.Effect>
                                                </Rectangle>
                                                <StackPanel Width="295">
                                                    <TextBlock Text="{Binding Title}" Foreground="White" FontWeight="Bold" FontSize="15" TextWrapping="Wrap"/>
                                                    <TextBlock Text="{Binding ShortContent}" TextWrapping="Wrap" Foreground="#FFCCCCCC" FontSize="12"/>
                                                </StackPanel>
                                            </StackPanel>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </ScrollViewer>
                            <Grid x:Name="TopScrollIndicator" Grid.Row="0" Height="25" Opacity="0" IsHitTestVisible="False">
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                                    <TextBlock x:Name="TopChevron1" Text="^" FontSize="20" FontWeight="Bold" Foreground="#FFFFA726">
                                        <TextBlock.Effect>
                                            <DropShadowEffect Color="#FFFFA726" BlurRadius="15" ShadowDepth="0" Opacity="1"/>
                                        </TextBlock.Effect>
                                        <TextBlock.RenderTransform>
                                            <TranslateTransform Y="7"/>
                                        </TextBlock.RenderTransform>
                                    </TextBlock>
                                    <TextBlock x:Name="TopChevron2" Text="^" FontSize="20" FontWeight="Bold" Foreground="#FFFFA726" Margin="15,0,15,0">
                                        <TextBlock.Effect>
                                            <DropShadowEffect Color="#FFFFA726" BlurRadius="15" ShadowDepth="0" Opacity="1"/>
                                        </TextBlock.Effect>
                                        <TextBlock.RenderTransform>
                                            <TranslateTransform Y="7"/>
                                        </TextBlock.RenderTransform>
                                    </TextBlock>
                                    <TextBlock x:Name="TopChevron3" Text="^" FontSize="20" FontWeight="Bold" Foreground="#FFFFA726">
                                        <TextBlock.Effect>
                                            <DropShadowEffect Color="#FFFFA726" BlurRadius="15" ShadowDepth="0" Opacity="1"/>
                                        </TextBlock.Effect>
                                        <TextBlock.RenderTransform>
                                            <TranslateTransform Y="7"/>
                                        </TextBlock.RenderTransform>
                                    </TextBlock>
                                </StackPanel>
                                <Grid.Triggers>
                                    <EventTrigger RoutedEvent="Loaded">
                                        <BeginStoryboard>
                                            <Storyboard RepeatBehavior="Forever" Duration="0:0:1.8">
                                                <DoubleAnimationUsingKeyFrames Storyboard.TargetName="TopChevron1" Storyboard.TargetProperty="Opacity" BeginTime="0:0:0.0">
                                                    <LinearDoubleKeyFrame KeyTime="0:0:0.0" Value="0" />
                                                    <LinearDoubleKeyFrame KeyTime="0:0:0.4" Value="1" />
                                                    <LinearDoubleKeyFrame KeyTime="0:0:1.0" Value="1" />
                                                    <LinearDoubleKeyFrame KeyTime="0:0:1.4" Value="0" />
                                                </DoubleAnimationUsingKeyFrames>
                                                <DoubleAnimation Storyboard.TargetName="TopChevron1" Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.Y)" From="7" To="-7" Duration="0:0:1.4" BeginTime="0:0:0.0"/>
                                                <DoubleAnimationUsingKeyFrames Storyboard.TargetName="TopChevron2" Storyboard.TargetProperty="Opacity" BeginTime="0:0:0.2">
                                                    <LinearDoubleKeyFrame KeyTime="0:0:0.0" Value="0" />
                                                    <LinearDoubleKeyFrame KeyTime="0:0:0.4" Value="1" />
                                                    <LinearDoubleKeyFrame KeyTime="0:0:1.0" Value="1" />
                                                    <LinearDoubleKeyFrame KeyTime="0:0:1.4" Value="0" />
                                                </DoubleAnimationUsingKeyFrames>
                                                <DoubleAnimation Storyboard.TargetName="TopChevron2" Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.Y)" From="7" To="-7" Duration="0:0:1.4" BeginTime="0:0:0.2"/>
                                                <DoubleAnimationUsingKeyFrames Storyboard.TargetName="TopChevron3" Storyboard.TargetProperty="Opacity" BeginTime="0:0:0.4">
                                                    <LinearDoubleKeyFrame KeyTime="0:0:0.0" Value="0" />
                                                    <LinearDoubleKeyFrame KeyTime="0:0:0.4" Value="1" />
                                                    <LinearDoubleKeyFrame KeyTime="0:0:1.0" Value="1" />
                                                    <LinearDoubleKeyFrame KeyTime="0:0:1.4" Value="0" />
                                                </DoubleAnimationUsingKeyFrames>
                                                <DoubleAnimation Storyboard.TargetName="TopChevron3" Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.Y)" From="7" To="-7" Duration="0:0:1.4" BeginTime="0:0:0.4"/>
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </EventTrigger>
                                </Grid.Triggers>
                            </Grid>
                            <Grid x:Name="BottomScrollIndicator" Grid.Row="2" Height="25" Opacity="0" IsHitTestVisible="False">
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                                    <TextBlock x:Name="BottomChevron1" Text="v" FontSize="20" FontWeight="Bold" Foreground="#FFFFA726">
                                        <TextBlock.Effect>
                                            <DropShadowEffect Color="#FFFFA726" BlurRadius="15" ShadowDepth="0" Opacity="1"/>
                                        </TextBlock.Effect>
                                        <TextBlock.RenderTransform>
                                            <TranslateTransform Y="-7"/>
                                        </TextBlock.RenderTransform>
                                    </TextBlock>
                                    <TextBlock x:Name="BottomChevron2" Text="v" FontSize="20" FontWeight="Bold" Foreground="#FFFFA726" Margin="15,0,15,0">
                                        <TextBlock.Effect>
                                            <DropShadowEffect Color="#FFFFA726" BlurRadius="15" ShadowDepth="0" Opacity="1"/>
                                        </TextBlock.Effect>
                                        <TextBlock.RenderTransform>
                                            <TranslateTransform Y="-7"/>
                                        </TextBlock.RenderTransform>
                                    </TextBlock>
                                    <TextBlock x:Name="BottomChevron3" Text="v" FontSize="20" FontWeight="Bold" Foreground="#FFFFA726">
                                        <TextBlock.Effect>
                                            <DropShadowEffect Color="#FFFFA726" BlurRadius="15" ShadowDepth="0" Opacity="1"/>
                                        </TextBlock.Effect>
                                        <TextBlock.RenderTransform>
                                            <TranslateTransform Y="-7"/>
                                        </TextBlock.RenderTransform>
                                    </TextBlock>
                                </StackPanel>
                                <Grid.Triggers>
                                    <EventTrigger RoutedEvent="Loaded">
                                        <BeginStoryboard>
                                            <Storyboard RepeatBehavior="Forever" Duration="0:0:1.8">
                                                <DoubleAnimationUsingKeyFrames Storyboard.TargetName="BottomChevron1" Storyboard.TargetProperty="Opacity" BeginTime="0:0:0.0">
                                                    <LinearDoubleKeyFrame KeyTime="0:0:0.0" Value="0" />
                                                    <LinearDoubleKeyFrame KeyTime="0:0:0.4" Value="1" />
                                                    <LinearDoubleKeyFrame KeyTime="0:0:1.0" Value="1" />
                                                    <LinearDoubleKeyFrame KeyTime="0:0:1.4" Value="0" />
                                                </DoubleAnimationUsingKeyFrames>
                                                <DoubleAnimation Storyboard.TargetName="BottomChevron1" Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.Y)" From="-7" To="7" Duration="0:0:1.4" BeginTime="0:0:0.0"/>
                                                <DoubleAnimationUsingKeyFrames Storyboard.TargetName="BottomChevron2" Storyboard.TargetProperty="Opacity" BeginTime="0:0:0.2">
                                                    <LinearDoubleKeyFrame KeyTime="0:0:0.0" Value="0" />
                                                    <LinearDoubleKeyFrame KeyTime="0:0:0.4" Value="1" />
                                                    <LinearDoubleKeyFrame KeyTime="0:0:1.0" Value="1" />
                                                    <LinearDoubleKeyFrame KeyTime="0:0:1.4" Value="0" />
                                                </DoubleAnimationUsingKeyFrames>
                                                <DoubleAnimation Storyboard.TargetName="BottomChevron2" Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.Y)" From="-7" To="7" Duration="0:0:1.4" BeginTime="0:0:0.2"/>
                                                <DoubleAnimationUsingKeyFrames Storyboard.TargetName="BottomChevron3" Storyboard.TargetProperty="Opacity" BeginTime="0:0:0.4">
                                                    <LinearDoubleKeyFrame KeyTime="0:0:0.0" Value="0" />
                                                    <LinearDoubleKeyFrame KeyTime="0:0:0.4" Value="1" />
                                                    <LinearDoubleKeyFrame KeyTime="0:0:1.0" Value="1" />
                                                    <LinearDoubleKeyFrame KeyTime="0:0:1.4" Value="0" />
                                                </DoubleAnimationUsingKeyFrames>
                                                <DoubleAnimation Storyboard.TargetName="BottomChevron3" Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.Y)" From="-7" To="7" Duration="0:0:1.4" BeginTime="0:0:0.4"/>
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </EventTrigger>
                                </Grid.Triggers>
                            </Grid>
                        </Grid>
                    </StackPanel>
                </Grid>

                <Border x:Name="NotificationBorder" Grid.Row="0" Grid.RowSpan="2" Height="50" Opacity="0" Background="#FF2c2f34" BorderBrush="#FFFFA726" BorderThickness="1.5" CornerRadius="10" Margin="25,90,20,0" HorizontalAlignment="Center" VerticalAlignment="Top" Visibility="Collapsed">
                    <TextBlock x:Name="NotificationText" Foreground="White" FontSize="16" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="20,0"/>
                </Border>
            </Grid>
        </Grid>
    </Border>
</Window>