<Window x:Class="BitFightersLauncher.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:svg="clr-namespace:SharpVectors.Converters;assembly=SharpVectors.Converters.Wpf"
        Title="BitFighters Launcher" Height="700" Width="1200"
        WindowStyle="None" AllowsTransparency="True" Background="Transparent"
        Icon="/Resources/Logo.png"
        WindowStartupLocation="CenterScreen"
        x:Name="LoginWindowRoot"
        Opacity="1">

    <Window.Triggers>
        <EventTrigger RoutedEvent="Loaded">
            <BeginStoryboard>
                <Storyboard>
                    <!-- Animate the main content Border instead of the Window to avoid layout/jump issues during window composition -->
                    <DoubleAnimation Storyboard.TargetName="RootBorder" Storyboard.TargetProperty="Opacity" From="0" To="1" Duration="0:0:0.5"/>
                </Storyboard>
            </BeginStoryboard>
        </EventTrigger>
    </Window.Triggers>

    <Window.Resources>

        <FontFamily x:Key="CustomFont">pack://application:,,,/Fonts/Energize-Bold-Italic.otf#Energize</FontFamily>
        <FontFamily x:Key="CustomFont2">pack://application:,,,/Fonts/SourGummy_Expanded-Bold.ttf#Sour Gummy Expanded</FontFamily>
        <FontFamily x:Key="CustomFont3">pack://application:,,,/Fonts/RussoOne-Regular.ttf#Russo One</FontFamily>
        <FontFamily x:Key="Number">pack://application:,,,/Fonts/RussoOne-Regular.ttf#Russo One</FontFamily>



        <Storyboard x:Key="ShowError">
            <DoubleAnimation Storyboard.TargetProperty="Opacity" To="1" Duration="0:0:0.2"/>
            <!-- Show: animate opacity only. Visibility/isHitTest handled in code-behind. -->
        </Storyboard>

        <Storyboard x:Key="HideError">
            <DoubleAnimation Storyboard.TargetProperty="Opacity" To="0" Duration="0:0:0.2"/>
            <!-- Hide: animate opacity only. Visibility/isHitTest handled in code-behind. -->
        </Storyboard>

        <Storyboard x:Key="FloatLabelUp" Storyboard.TargetName="UsernameLabel">
            <DoubleAnimation Storyboard.TargetProperty="(Canvas.Top)" To="-20" Duration="0:0:0.2"/>
            <DoubleAnimation Storyboard.TargetProperty="FontSize" To="18" Duration="0:0:0.2"/>
            <ColorAnimation Storyboard.TargetProperty="(TextBlock.Foreground).(SolidColorBrush.Color)" 
                           To="#FFFFA726" Duration="0:0:0.2"/>
        </Storyboard>

        <Storyboard x:Key="FloatLabelDown" Storyboard.TargetName="UsernameLabel">
            <DoubleAnimation Storyboard.TargetProperty="(Canvas.Top)" To="20" Duration="0:0:0.2"/>
            <DoubleAnimation Storyboard.TargetProperty="FontSize" To="14" Duration="0:0:0.2"/>
            <ColorAnimation Storyboard.TargetProperty="(TextBlock.Foreground).(SolidColorBrush.Color)" 
                           To="#AACCCCCC" Duration="0:0:0.2"/>
        </Storyboard>

        <Storyboard x:Key="FloatPasswordLabelUp" Storyboard.TargetName="PasswordLabel">
            <DoubleAnimation Storyboard.TargetProperty="(Canvas.Top)" To="-20" Duration="0:0:0.2"/>
            <DoubleAnimation Storyboard.TargetProperty="FontSize" To="18" Duration="0:0:0.2"/>
            <ColorAnimation Storyboard.TargetProperty="(TextBlock.Foreground).(SolidColorBrush.Color)" 
                           To="#FFFFA726" Duration="0:0:0.2"/>
        </Storyboard>

        <Storyboard x:Key="FloatPasswordLabelDown" Storyboard.TargetName="PasswordLabel">
            <DoubleAnimation Storyboard.TargetProperty="(Canvas.Top)" To="20" Duration="0:0:0.2"/>
            <DoubleAnimation Storyboard.TargetProperty="FontSize" To="14" Duration="0:0:0.2"/>
            <ColorAnimation Storyboard.TargetProperty="(TextBlock.Foreground).(SolidColorBrush.Color)" 
                           To="#AACCCCCC" Duration="0:0:0.2"/>
        </Storyboard>
    </Window.Resources>

    <Border x:Name="RootBorder" CornerRadius="25" BorderBrush="#00CCCCCC" BorderThickness="2" ClipToBounds="True" Background="#FF1A1C20" Opacity="0">
        <Border.Effect>
            <DropShadowEffect Color="#000000" BlurRadius="0" ShadowDepth="0" Opacity="1"/>
        </Border.Effect>

        <Grid>
            <!-- Background image with proper clipping (same as MainWindow) -->
            <Border CornerRadius="23" ClipToBounds="True">
                <Border.Background>
                    <ImageBrush ImageSource="/Resources/Background.png" Stretch="UniformToFill"/>
                </Border.Background>
            </Border>
            
            <!-- Simple dark overlay to match MainWindow look -->
            <Border CornerRadius="23">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                        <GradientStop Color="#F0000000" Offset="0"/>
                        <GradientStop Color="#E6000000" Offset="0.2"/>
                        <GradientStop Color="#D9000000" Offset="0.35"/>
                        <GradientStop Color="#99000000" Offset="0.5"/>
                        <GradientStop Color="#4D000000" Offset="0.65"/>
                        <GradientStop Color="#1A000000" Offset="0.8"/>
                        <GradientStop Color="#00000000" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>
            </Border>

            <!-- Right side fade overlay (simplified stops to avoid hard edge banding) -->
            <Border x:Name="RightSideFade" CornerRadius="23" Width="400" HorizontalAlignment="Right" Margin="0,0,0,0" IsHitTestVisible="False" Panel.ZIndex="0" ClipToBounds="True">
                <Border.Background>
                    <!-- Simplified gradient: semi-transparent at edge -> transparent inside -->
                    <LinearGradientBrush StartPoint="1,0" EndPoint="0,0">
                        <GradientStop Color="#CC000000" Offset="0"/>
                        <GradientStop Color="#66000000" Offset="0.35"/>
                        <GradientStop Color="#00000000" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>
            </Border>





            <Grid Panel.ZIndex="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Grid Height="80" VerticalAlignment="Top" MouseLeftButtonDown="DragWindow" Background="Transparent">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="50"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="50"/>
                    </Grid.ColumnDefinitions>


                    <!-- Minimize button placed to the left of the close button (styled same as MainWindow) -->
                    <Button Grid.Column="1" Content="&#xE921;" FontFamily="Segoe MDL2 Assets" FontSize="12" 
                            Click="MinimizeButton_Click" Height="30" Width="30" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,-7,35">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="#45d2cdcf"/>
                                <Setter Property="BorderBrush" Value="Transparent"/>
                                <Setter Property="Foreground" Value="#45d2cdcf"/>
                                <Setter Property="Cursor" Value="Hand"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border x:Name="ButtonBorder" Background="{TemplateBinding Background}" 
                                                    CornerRadius="15" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="1">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" Margin="6,9,6,0"/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Foreground" Value="#FF1A1C20"/>
                                                    <Setter TargetName="ButtonBorder" Property="Background" Value="#80FFFFFF"/>
                                                    <Setter TargetName="ButtonBorder" Property="BorderBrush" Value="#FF1A1C20"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Button.Style>
                    </Button>

                    <Button Grid.Column="2" Content="&#xE711;" FontFamily="Segoe MDL2 Assets" FontSize="16" 
                            HorizontalAlignment="Right" VerticalAlignment="Center" 
                            Margin="0,0,10,35" Click="CloseButton_Click" 
                            Height="30" Width="30">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="#45d2cdcf"/>
                                <Setter Property="BorderBrush" Value="Transparent"/>
                                <Setter Property="Foreground" Value="#45d2cdcf"/>
                                <Setter Property="Cursor" Value="Hand"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border x:Name="ButtonBorder" Background="{TemplateBinding Background}" 
                                                    CornerRadius="15" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="1">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,1,0,0"/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Foreground" Value="#FF1A1C20"/>
                                                    <Setter TargetName="ButtonBorder" Property="Background" Value="#80FFFFFF"/>
                                                    <Setter TargetName="ButtonBorder" Property="BorderBrush" Value="#FF1A1C20"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Button.Style>
                    </Button>
                </Grid>

                <!-- Wider panel with two columns: left for login, right for welcome/branding -->
                <Grid Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center" Width="1000" Margin="0,0,0,40">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="420"/>
                        <ColumnDefinition Width="1.2*"/>
                    </Grid.ColumnDefinitions>


                    <!-- Left: Login controls (moved up and further left) -->
                    <StackPanel Grid.Column="0" HorizontalAlignment="Left" VerticalAlignment="Top" Width="300" Margin="-80,-40,0,0">
                        <!-- Title above login (moved from right side) -->
                        <Border Background="Transparent" CornerRadius="10" Padding="10,0" Margin="45,0,0,40" HorizontalAlignment="Center">
                            <StackPanel HorizontalAlignment="Center">
                                <TextBlock Text="Üdvözöljük!" FontSize="30" FontWeight="Bold" FontFamily="{StaticResource CustomFont3}"
                                           Foreground="White" HorizontalAlignment="Center" TextAlignment="Center" Margin="0,0,0,5">
                                    <TextBlock.Effect>
                                        <DropShadowEffect Color="#FFFFA726" BlurRadius="8" ShadowDepth="0" Opacity="0.8"/>
                                    </TextBlock.Effect>
                                </TextBlock>
                                <TextBlock Text="Jelentkezzen be a folytatáshoz" FontSize="15" FontFamily="{StaticResource CustomFont3}"
                                           Foreground="#CCCCCCCC" HorizontalAlignment="Center" TextAlignment="Center"/>
                            </StackPanel>
                        </Border>
                        <Border Margin="20,0,-20,18">
                            <Grid>
                                <Border x:Name="UsernameBorder" Background="#15000000" CornerRadius="12" 
                                        BorderBrush="#33FFFFFF" BorderThickness="2" Height="50"/>

                                <Canvas Margin="15,2">
                                    <TextBlock x:Name="UsernameLabel" Text="Felhasználónév"
                                               FontFamily="{StaticResource CustomFont3}"
                                              Canvas.Top="20" Canvas.Left="10"
                                              Foreground="#AACCCCCC" FontSize="14" IsHitTestVisible="False"/>
                                </Canvas>

                                <TextBox x:Name="UsernameTextBox" Background="Transparent" Foreground="White" FontFamily="{StaticResource CustomFont3}"
                                         FontSize="16" Padding="18,22" BorderThickness="0" Height="60"
                                         CaretBrush="#FFFFA726" FontWeight="Medium"
                                         GotFocus="UsernameTextBox_GotFocus" LostFocus="UsernameTextBox_LostFocus"
                                         TextChanged="UsernameTextBox_TextChanged"/>
                            </Grid>
                        </Border>

                        <Border Margin="20,0,-20,18">
                            <Grid>
                                <Border x:Name="PasswordBorder" Background="#15000000" CornerRadius="12" 
                                        BorderBrush="#33FFFFFF" BorderThickness="2" Height="50"/>

                                <Canvas Margin="15,2">
                                    <TextBlock x:Name="PasswordLabel" Text="Jelszó" 
                                               FontFamily="{StaticResource CustomFont3}"
                                              Canvas.Top="20" Canvas.Left="10"
                                              Foreground="#AACCCCCC" FontSize="14" IsHitTestVisible="False"/>
                                </Canvas>

                                <Grid>
                                    <PasswordBox x:Name="PasswordBox" Background="Transparent" Foreground="White" 
                                                 FontSize="16" Padding="15,19,50,13" BorderThickness="0" Height="60"
                                                 CaretBrush="#FFFFA726" FontWeight="Medium" Visibility="Visible"
                                                 GotFocus="PasswordBox_GotFocus" LostFocus="PasswordBox_LostFocus"
                                                 PasswordChanged="PasswordBox_PasswordChanged"/>
                                    <TextBox x:Name="PasswordTextBox" Background="Transparent" Foreground="White" FontFamily="{StaticResource CustomFont3}"
                                             FontSize="16" Padding="15,21,50,13" BorderThickness="0" Height="60"
                                             CaretBrush="#FFFFA726" FontWeight="Medium" Visibility="Collapsed"
                                             GotFocus="PasswordTextBox_GotFocus" LostFocus="PasswordTextBox_LostFocus"
                                             TextChanged="PasswordTextBox_TextChanged"/>


                                    <Button x:Name="TogglePasswordButton" 
                                            HorizontalAlignment="Right" VerticalAlignment="Center" 
                                            Width="36" Height="36" Margin="0,0,8,0"
                                            Click="TogglePasswordButton_Click"
                                            Background="Transparent" BorderThickness="0" Cursor="Hand">
                                        <Button.Style>
                                            <Style TargetType="Button">
                                                <Setter Property="Template">
                                                    <Setter.Value>
                                                        <ControlTemplate TargetType="Button">
                                                            <Border x:Name="ButtonBorder" Background="Transparent" 
                                                                    CornerRadius="20" BorderBrush="Transparent" BorderThickness="1">
                                                                <TextBlock x:Name="IconText" Text="👁" 
                                                                           FontSize="18" 
                                                                           Foreground="#AAFFA726" 
                                                                           HorizontalAlignment="Center" 
                                                                           VerticalAlignment="Center"
                                                                           FontWeight="Bold"/>
                                                            </Border>
                                                            <ControlTemplate.Triggers>
                                                                <Trigger Property="IsMouseOver" Value="True">
                                                                    <Setter TargetName="ButtonBorder" Property="Background" Value="#22FFA726"/>
                                                                    <Setter TargetName="IconText" Property="Foreground" Value="#FFFFA726"/>
                                                                </Trigger>
                                                            </ControlTemplate.Triggers>
                                                        </ControlTemplate>
                                                    </Setter.Value>
                                                </Setter>
                                            </Style>
                                        </Button.Style>
                                    </Button>
                                </Grid>
                            </Grid>
                        </Border>

                        <!-- Google Authentication Button placed directly under the password field -->
                        <Button x:Name="GoogleButton" Click="GoogleAuthButton_Click" Height="50" Margin="20,-10,-20,15" Cursor="Hand" HorizontalAlignment="Stretch">
                            <Button.Background>
                                <SolidColorBrush Color="White"/>
                            </Button.Background>
                            <Button.BorderBrush>
                                <SolidColorBrush Color="#FFE0E0E0"/>
                            </Button.BorderBrush>
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border x:Name="border" CornerRadius="12" Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="1">
                                        <Grid Margin="10,0">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="40"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>
                                            <!-- Google icon rendered via SharpVectors SvgViewbox -->
                                            <svg:SvgViewbox Source="pack://application:,,,/Icons/google.svg" Width="26" Height="26" Margin="-10,0,0,0" Stretch="Uniform" Grid.Column="0"/>
                                            <ContentPresenter Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                        </Grid>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter TargetName="border" Property="Background" Value="#FFF7F7F7"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Button.Template>
                            <TextBlock Text="BEJELENTKEZÉS GOOGLE-EL" FontFamily="{StaticResource CustomFont3}" FontWeight="Bold" Foreground="#FF1A1C20" FontSize="16" Margin="0,1,0,0"/>
                        </Button>

                        <!-- Move: Remember checkbox placed under Google auth button -->
                        <CheckBox x:Name="RememberMeCheckBox" Margin="30,8,0,20" HorizontalAlignment="Left">
                            <CheckBox.Style>
                                <Style TargetType="CheckBox">
                                    <Setter Property="Foreground" Value="#CCCCCC"/>
                                    <Setter Property="FontSize" Value="14"/>
                                    <Setter Property="FontWeight" Value="Medium"/>
                                    <Setter Property="FontFamily" Value="{StaticResource CustomFont3}"/>
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="CheckBox">
                                                <StackPanel Orientation="Horizontal">
                                                    <Border x:Name="CheckBorder" Width="22" Height="22" 
                                                            Background="#15FFFFFF" BorderBrush="#44FFFFFF" 
                                                            BorderThickness="2" CornerRadius="6" Margin="0,0,12,0">
                                                        <TextBlock x:Name="CheckMark" Text="✓" FontSize="14" FontWeight="Bold" Margin="0,1,0,0"
                                                                   Foreground="#FFFFA726" HorizontalAlignment="Center" 
                                                                   VerticalAlignment="Center" Opacity="0"/>
                                                    </Border>
                                                    <ContentPresenter VerticalAlignment="Center"/>
                                                </StackPanel>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsChecked" Value="True">
                                                        <Setter TargetName="CheckMark" Property="Opacity" Value="1"/>
                                                        <Setter TargetName="CheckBorder" Property="Background" Value="#33FFA726"/>
                                                        <Setter TargetName="CheckBorder" Property="BorderBrush" Value="#FFFFA726"/>
                                                    </Trigger>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter TargetName="CheckBorder" Property="BorderBrush" Value="#FFFFA726"/>
                                                        <Setter TargetName="CheckBorder" Property="Background" Value="#11FFA726"/>
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Setter Property="Cursor" Value="Hand"/>
                                    <Setter Property="Content" Value="Emlékezzen rám"/>
                                </Style>
                            </CheckBox.Style>
                        </CheckBox>

                        <Border x:Name="ErrorBorder" Background="#22FF4444" CornerRadius="12"
                                BorderBrush="#FFFF4444" BorderThickness="2"
                                Padding="15,10" Opacity="0" Visibility="Visible" IsHitTestVisible="False"
                                Margin="20,7,-20,50" Height="50" VerticalAlignment="Top">
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                                <TextBlock Text="⚠" FontSize="16" Foreground="#FFFF4444" Margin="0,-3,8,0" VerticalAlignment="Center"/>
                                <TextBlock x:Name="ErrorText" Text="Hiba üzenet" 
                                           Foreground="White" FontSize="14" FontWeight="Medium" 
                                           FontFamily="{StaticResource CustomFont3}" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Border>

                        <Button x:Name="LoginButton" Click="LoginButton_Click" Height="55" Margin="20,0,-20,15" Cursor="Hand">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Background">
                                        <Setter.Value>
                                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                                <GradientStop Color="#FFFFA726" Offset="0"/>
                                                <GradientStop Color="#FFFF8F00" Offset="1"/>
                                            </LinearGradientBrush>
                                        </Setter.Value>
                                    </Setter>
                                    <Setter Property="BorderBrush" Value="Transparent"/>
                                    <Setter Property="Foreground" Value="#FF1A1C20"/>
                                    <Setter Property="FontWeight" Value="Bold"/>
                                    <Setter Property="FontSize" Value="16"/>
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border x:Name="border" CornerRadius="12" Background="{TemplateBinding Background}" 
                                                        BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="0">
                                                    <Border.Effect>
                                                        <DropShadowEffect x:Name="ButtonGlow" Color="#FFFFA726" BlurRadius="15" ShadowDepth="0" Opacity="0.8"/>
                                                    </Border.Effect>
                                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter TargetName="border" Property="Background">
                                                            <Setter.Value>
                                                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                                                    <GradientStop Color="#FFFF8F00" Offset="0"/>
                                                                    <GradientStop Color="#FFCC7A00" Offset="1"/>
                                                                </LinearGradientBrush>
                                                            </Setter.Value>
                                                        </Setter>
                                                    </Trigger>
                                                    <Trigger Property="IsPressed" Value="True">
                                                        <Setter TargetName="border" Property="Background">
                                                            <Setter.Value>
                                                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                                                    <GradientStop Color="#FFCC7A00" Offset="0"/>
                                                                    <GradientStop Color="#FF996600" Offset="1"/>
                                                                </LinearGradientBrush>
                                                            </Setter.Value>
                                                        </Setter>
                                                    </Trigger>
                                                    <Trigger Property="IsEnabled" Value="False">
                                                        <Setter TargetName="border" Property="Background" Value="#77FFA726"/>
                                                        <Setter Property="Foreground" Value="#77000000"/>
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </Button.Style>
                            <TextBlock x:Name="LoginButtonText" Text="BEJELENTKEZÉS" VerticalAlignment="Center" HorizontalAlignment="Center" FontFamily="{StaticResource CustomFont3}"/>
                        </Button>

                        <!-- Google Authentication Button (same size as LoginButton) -->
                        

                        <TextBlock Text="BitFighters © 2026" FontSize="12" Foreground="#66CCCCCC" FontFamily="{StaticResource CustomFont3}"
                                   HorizontalAlignment="Center" FontWeight="Medium" Margin="45,0,0,0"/>
                    </StackPanel>
            </Grid>
        </Grid>
        </Grid>
    </Border>
</Window>