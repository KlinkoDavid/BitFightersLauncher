<Window x:Class="BitFightersLauncher.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="BitFighters Launcher" Height="450" Width="400"
        WindowStyle="None" AllowsTransparency="True" Background="Transparent"
        Icon="/Resources/Logo.png"
        WindowStartupLocation="CenterScreen"
        x:Name="LoginWindowRoot">

    <Window.Resources>
        <Storyboard x:Key="ShowError">
            <DoubleAnimation Storyboard.TargetProperty="Opacity" To="1" Duration="0:0:0.3"/>
            <ObjectAnimationUsingKeyFrames Storyboard.TargetProperty="Visibility" Duration="0">
                <DiscreteObjectKeyFrame KeyTime="0" Value="{x:Static Visibility.Visible}"/>
            </ObjectAnimationUsingKeyFrames>
        </Storyboard>
        <Storyboard x:Key="HideError">
            <DoubleAnimation Storyboard.TargetProperty="Opacity" To="0" Duration="0:0:0.3"/>
            <ObjectAnimationUsingKeyFrames Storyboard.TargetProperty="Visibility" BeginTime="0:0:0.3" Duration="0">
                <DiscreteObjectKeyFrame KeyTime="0" Value="{x:Static Visibility.Collapsed}"/>
            </ObjectAnimationUsingKeyFrames>
        </Storyboard>
    </Window.Resources>

    <Border x:Name="RootBorder" CornerRadius="15" BorderBrush="#33CCCCCC" BorderThickness="1.5" ClipToBounds="True">
        <Border.Background>
            <SolidColorBrush Color="#FF1A1C20"/>
        </Border.Background>

        <Grid>
            <Rectangle Fill="#88000000" RadiusX="{Binding ElementName=RootBorder, Path=CornerRadius.TopLeft}" RadiusY="{Binding ElementName=RootBorder, Path=CornerRadius.TopLeft}" />

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Header -->
                <Grid Height="50" VerticalAlignment="Top" MouseLeftButtonDown="DragWindow" Background="Transparent">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                        <Image Source="/Resources/Logo.png" Width="30" Margin="0,0,10,0">
                            <Image.Effect>
                                <DropShadowEffect Color="#FFFFA726" BlurRadius="20" ShadowDepth="0" Opacity="0.8"/>
                            </Image.Effect>
                        </Image>
                        <TextBlock Text="BITFIGHTERS" FontSize="18" FontWeight="Bold" Foreground="#FFFFA726" VerticalAlignment="Center">
                            <TextBlock.Effect>
                                <DropShadowEffect ShadowDepth="0" Opacity="0.8" Color="#FFFFA726" BlurRadius="10"/>
                            </TextBlock.Effect>
                        </TextBlock>
                    </StackPanel>
                    
                    <Button Content="&#xE711;" FontFamily="Segoe MDL2 Assets" FontSize="18" 
                            HorizontalAlignment="Right" VerticalAlignment="Center" 
                            Margin="0,0,15,0" Click="CloseButton_Click" 
                            Height="20" Width="20">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="Transparent"/>
                                <Setter Property="BorderBrush" Value="Transparent"/>
                                <Setter Property="Foreground" Value="#FFFFA726"/>
                                <Setter Property="Cursor" Value="Hand"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Foreground" Value="Red"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Button.Style>
                    </Button>
                </Grid>

                <!-- Login Form -->
                <StackPanel Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center" Width="280">
                    
                    <!-- Title -->
                    <TextBlock Text="Bejelentkezés" FontSize="24" FontWeight="Bold" 
                               Foreground="White" HorizontalAlignment="Center" Margin="0,0,0,30">
                        <TextBlock.Effect>
                            <DropShadowEffect Color="#FFFFA726" BlurRadius="8" ShadowDepth="0" Opacity="0.6"/>
                        </TextBlock.Effect>
                    </TextBlock>

                    <!-- Username -->
                    <TextBlock Text="Felhasználónév:" Foreground="#CCCCCC" FontSize="14" Margin="0,0,0,5"/>
                    <Border Background="#22FFFFFF" CornerRadius="8" BorderBrush="#44FFFFFF" BorderThickness="1" Margin="0,0,0,15">
                        <TextBox x:Name="UsernameTextBox" Background="Transparent" Foreground="White" 
                                 FontSize="14" Padding="12,10" BorderThickness="0"
                                 CaretBrush="White"/>
                    </Border>

                    <!-- Password -->
                    <TextBlock Text="Jelszó:" Foreground="#CCCCCC" FontSize="14" Margin="0,0,0,5"/>
                    <Grid Margin="0,0,0,20">
                        <Border Background="#22FFFFFF" CornerRadius="8" BorderBrush="#44FFFFFF" BorderThickness="1">
                            <Grid>
                                <PasswordBox x:Name="PasswordBox" Background="Transparent" Foreground="White" 
                                             FontSize="14" Padding="12,10,45,10" BorderThickness="0"
                                             CaretBrush="White" Visibility="Visible"/>
                                <TextBox x:Name="PasswordTextBox" Background="Transparent" Foreground="White" 
                                         FontSize="14" Padding="12,10,45,10" BorderThickness="0"
                                         CaretBrush="White" Visibility="Collapsed"/>
                                
                                <!-- Show/Hide Password Button -->
                                <Button x:Name="TogglePasswordButton" 
                                        HorizontalAlignment="Right" VerticalAlignment="Center" 
                                        Width="35" Height="35" Margin="0,0,5,0"
                                        Click="TogglePasswordButton_Click"
                                        Background="Transparent" BorderThickness="0" Cursor="Hand">
                                    <Button.Style>
                                        <Style TargetType="Button">
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="Button">
                                                        <Border x:Name="ButtonBorder" Background="{TemplateBinding Background}" 
                                                                CornerRadius="18" BorderBrush="#44FFFFFF" BorderThickness="1">
                                                            <Border.Effect>
                                                                <DropShadowEffect Color="White" BlurRadius="0" ShadowDepth="0" Opacity="0"/>
                                                            </Border.Effect>
                                                            <TextBlock x:Name="IconText" Text="👁" 
                                                                       FontSize="18" 
                                                                       Foreground="White" 
                                                                       HorizontalAlignment="Center" 
                                                                       VerticalAlignment="Center"
                                                                       FontWeight="Bold">
                                                                <TextBlock.Effect>
                                                                    <DropShadowEffect Color="#FFFFA726" BlurRadius="4" ShadowDepth="0" Opacity="0.8"/>
                                                                </TextBlock.Effect>
                                                            </TextBlock>
                                                        </Border>
                                                        <ControlTemplate.Triggers>
                                                            <Trigger Property="IsMouseOver" Value="True">
                                                                <Setter TargetName="ButtonBorder" Property="Background" Value="#33FFFFFF"/>
                                                                <Setter TargetName="ButtonBorder" Property="BorderBrush" Value="#FFFFA726"/>
                                                                <Setter TargetName="IconText" Property="Foreground" Value="#FFFFA726"/>
                                                            </Trigger>
                                                            <Trigger Property="IsPressed" Value="True">
                                                                <Setter TargetName="ButtonBorder" Property="Background" Value="#55FFFFFF"/>
                                                                <Setter TargetName="IconText" Property="Foreground" Value="#FFFF8F00"/>
                                                            </Trigger>
                                                        </ControlTemplate.Triggers>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                        </Style>
                                    </Button.Style>
                                </Button>
                            </Grid>
                        </Border>
                    </Grid>

                    <!-- Error Message -->
                    <Border x:Name="ErrorBorder" Background="#AAFF4444" CornerRadius="6" 
                            Padding="10,8" Margin="0,0,0,15" Opacity="0" Visibility="Collapsed">
                        <TextBlock x:Name="ErrorText" Text="Hiba uzenet" 
                                   Foreground="White" FontSize="12" HorizontalAlignment="Center"/>
                    </Border>

                    <!-- Remember Me Checkbox -->
                    <CheckBox x:Name="RememberMeCheckBox" Margin="0,0,0,20" HorizontalAlignment="Center">
                        <CheckBox.Style>
                            <Style TargetType="CheckBox">
                                <Setter Property="Foreground" Value="#CCCCCC"/>
                                <Setter Property="FontSize" Value="14"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="CheckBox">
                                            <StackPanel Orientation="Horizontal">
                                                <Border x:Name="CheckBorder" Width="20" Height="20" 
                                                        Background="#22FFFFFF" BorderBrush="#44FFFFFF" 
                                                        BorderThickness="1" CornerRadius="4" Margin="0,0,8,0">
                                                    <Border.Effect>
                                                        <DropShadowEffect Color="#FFFFA726" BlurRadius="0" ShadowDepth="0" Opacity="0"/>
                                                    </Border.Effect>
                                                    <TextBlock x:Name="CheckMark" Text="✓" FontSize="14" FontWeight="Bold"
                                                               Foreground="#FFFFA726" HorizontalAlignment="Center" 
                                                               VerticalAlignment="Center" Opacity="0">
                                                        <TextBlock.Effect>
                                                            <DropShadowEffect Color="#FFFFA726" BlurRadius="4" ShadowDepth="0" Opacity="0.8"/>
                                                        </TextBlock.Effect>
                                                    </TextBlock>
                                                </Border>
                                                <ContentPresenter VerticalAlignment="Center"/>
                                            </StackPanel>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsChecked" Value="True">
                                                    <Setter TargetName="CheckMark" Property="Opacity" Value="1"/>
                                                    <Setter TargetName="CheckBorder" Property="Background" Value="#33FFA726"/>
                                                    <Setter TargetName="CheckBorder" Property="BorderBrush" Value="#FFFFA726"/>
                                                </Trigger>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter TargetName="CheckBorder" Property="BorderBrush" Value="#FFFFA726"/>
                                                    <Setter TargetName="CheckBorder" Property="Background" Value="#11FFFFFF"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Setter Property="Cursor" Value="Hand"/>
                                <Setter Property="Content" Value="Jegyezz meg"/>
                            </Style>
                        </CheckBox.Style>
                    </CheckBox>

                    <!-- Login Button -->
                    <Button x:Name="LoginButton" Click="LoginButton_Click" Height="45" Margin="0,0,0,15" Cursor="Hand">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="#FFFFA726"/>
                                <Setter Property="BorderBrush" Value="Transparent"/>
                                <Setter Property="Foreground" Value="#FF1A1C20"/>
                                <Setter Property="FontWeight" Value="Bold"/>
                                <Setter Property="FontSize" Value="16"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border x:Name="border" CornerRadius="8" Background="{TemplateBinding Background}" 
                                                    BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="0">
                                                <Border.Effect>
                                                    <DropShadowEffect Color="#FFFFA726" BlurRadius="8" ShadowDepth="0" Opacity="0.6"/>
                                                </Border.Effect>
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter TargetName="border" Property="Background" Value="#FFFF8F00"/>
                                                </Trigger>
                                                <Trigger Property="IsPressed" Value="True">
                                                    <Setter TargetName="border" Property="Background" Value="#FFCC7A00"/>
                                                </Trigger>
                                                <Trigger Property="IsEnabled" Value="False">
                                                    <Setter TargetName="border" Property="Background" Value="#77FFA726"/>
                                                    <Setter Property="Foreground" Value="#77000000"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Button.Style>
                        <TextBlock x:Name="LoginButtonText" Text="BEJELENTKEZÉS"/>
                    </Button>

                </StackPanel>
            </Grid>
        </Grid>
    </Border>
</Window>