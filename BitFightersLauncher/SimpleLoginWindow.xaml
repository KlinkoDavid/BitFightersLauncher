<Window x:Class="BitFightersLauncher.SimpleLoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="BitFighters Launcher - Simple" Height="300" Width="400"
        WindowStartupLocation="CenterScreen"
        Background="DarkGray">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="BitFighters Launcher" FontSize="24" FontWeight="Bold" 
                       Foreground="Orange" HorizontalAlignment="Center" Margin="0,0,0,20"/>
            <TextBox Name="UsernameBox" Width="200" Height="30" Margin="0,0,0,10"/>
            <PasswordBox Name="PasswordBox" Width="200" Height="30" Margin="0,0,0,20"/>
            <Button Name="LoginBtn" Content="Login" Width="100" Height="30" 
                    Click="LoginBtn_Click"/>
        </StackPanel>
    </Grid>
</Window>